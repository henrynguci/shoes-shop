{
    "name": "shoes-shop",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "frontend",
      "backend"
    ],
    "scripts": {
      "lint": "eslint .",
      "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
      "prepare": "husky install",
      "pre-commit": "lint-staged"
    },
    "devDependencies": {
      "cross-env": "^7.0.3",
      "eslint": "^8.55.0",
      "husky": "^8.0.3",
      "lint-staged": "^15.2.10",
      "prettier": "^3.1.0"
    },
    "lint-staged": {
      "*.{js,jsx,ts,tsx}": [
        "eslint --fix",
        "prettier --write"
      ],
      "*.{json,md}": [
        "prettier --write"
      ]
    }
  }
